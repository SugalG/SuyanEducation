generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SiteSettings {
  id              String   @id @default(cuid())
  siteName        String
  tagline         String?
  primaryPhone    String?
  whatsappNumber  String?
  primaryEmail    String?
  address         String?
  googleMapLink   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model GalleryImage {
  id          String   @id @default(cuid())
  title       String?
  url         String
  category    String?  
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
}

model Testimonial {
  id          String   @id @default(cuid())
  name        String
  message     String
  imageUrl    String?
  country     String?      
  program     String?      
  year        String?   
  highlight   String?     
  isFeatured  Boolean      @default(false)
  createdAt   DateTime     @default(now())
}

model University {
  id          String   @id @default(cuid())
  name        String
  country     Destination @relation(fields:[countryId], references:[id])
  countryId   String
  websiteUrl  String?
  city        String?
  createdAt   DateTime @default(now())
  imageUrl    String
  @@index([countryId])
}

model Destination {
  id            String   @id @default(cuid())
  slug          String   @unique
  country       String
  heroImage     String?
  universities  University[]
  blogs         BlogPost[]
  descriptionTitle String? @default("Introduction")
  description   String?
  whyPoints     String?  
  educationTitle String? @default("Education System and Requirements")
  education     String?
  popularFieldsTitle String? @default("Top Field of Study")
  popularFields String?
  visaUpdatesTitle String? @default("Visa and Immigration Updates")  
  visaUpdates   String?
  lifeInCountry LifeInCountry
  jobsAndCareer JobsAndCareer
  createdAt     DateTime @default(now())
}

model LifeInCountry {
  id              String   @id @default(cuid())
  destinationId   String   @unique
  destination     Destination @relation(fields: [destinationId], references: [id])

  title           String? @default("Life in the Country")

  livingCost      String?  // monthly expenses overview
  accommodation   String?  // dorms, shared apartments, rent
  insurance       String?  // health insurance requirements
  transportation  String?  // public transport info
  foodLifestyle   String?  // food habits, halal/veg options
  safety          String?  // general safety info
  workLifeBalance String?  // student life balance

  createdAt       DateTime @default(now())
}


model JobsAndCareer {
  id              String   @id @default(cuid())
  destinationId   String   @unique
  destination     Destination @relation(fields: [destinationId], references: [id])

  title           String? @default("Jobs and Career Opportunities")

  partTimeRules   String?  // hours allowed, restrictions
  partTimeSectors String?  // retail, IT, hospitality, etc
  avgWage         String?  // average hourly pay
  internshipInfo String?  // internships during study
  postStudyWork  String?  // PSW visa duration & rules
  prPathways     String?  // PR or long-term stay overview
  demandJobs     String?  // in-demand professions

  createdAt       DateTime @default(now())
}


model Service {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  summary     String?
  content     String?  
  heroImage   String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  countryId   String
  country     Destination @relation(fields:[countryId], references:[id])
  imageUrl    String
  excerpt     String?
  content     String   
  coverImage  String?
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  @@index([publishedAt, countryId])
}

model Certificate {
  id          String   @id @default(cuid())
  title       String
  issuer      String?
  imageUrl    String
  issuedYear  Int?
  createdAt   DateTime @default(now())
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model GalleryAlbum {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  description String?
  albumDate   DateTime // the date you want to display/sort by (NOT createdAt)
  coverImage  String?  // Cloudinary URL (optional; can be first photo)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  photos      GalleryPhoto[]
  @@index([albumDate])
  @@map("gallery_albums")
}

model GalleryPhoto {
  id        String   @id @default(uuid())
  imageUrl  String   // Cloudinary secure_url
  publicId  String   // Cloudinary public_id (needed for deletion)
  createdAt DateTime @default(now())
  caption   String? 
  albumId   String
  album     GalleryAlbum @relation(fields: [albumId], references: [id], onDelete: Cascade)
  @@index([albumId])
  @@map("gallery_photos")
}
